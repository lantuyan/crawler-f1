# Fgirl Crawler Environment Configuration
# Copy this file to .env and update the values according to your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, production, staging)
NODE_ENV=production

# Server port
PORT=3000

# Session secret (change this in production!)
SESSION_SECRET=crawler-secret-key-change-in-production

# =============================================================================
# BROWSER SETTINGS
# =============================================================================

# Chrome/Chromium executable path (auto-detected if not specified)
# Linux examples:
# CHROME_PATH=/usr/bin/google-chrome-stable
# CHROME_PATH=/usr/bin/chromium-browser
# CHROME_PATH=/snap/bin/chromium
# macOS examples:
# CHROME_PATH=/Applications/Google Chrome.app/Contents/MacOS/Google Chrome
CHROME_PATH=

# Browser headless mode (true, false, "new")
HEADLESS=new

# =============================================================================
# PROXY SETTINGS
# =============================================================================

# Proxy URL (leave empty to disable proxy)
PROXY_URL=http://proxybird:proxybird@155.254.39.107:6065

# Proxy username and password (if different from URL)
PROXY_USERNAME=proxybird
PROXY_PASSWORD=proxybird

# =============================================================================
# CRAWLER SETTINGS
# =============================================================================

# Delay between requests (milliseconds)
DELAY_BETWEEN_REQUESTS=100

# Number of concurrent threads for categories crawler
CATEGORIES_THREADS=10

# Number of concurrent threads for girls crawler
GIRLS_THREADS=10

# Maximum pages to crawl for categories
MAX_PAGES_CATEGORIES=125

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# =============================================================================
# FILE PATHS
# =============================================================================

# Output files
CATEGORIES_OUTPUT_FILE=list-girl.csv
GIRLS_OUTPUT_FILE=detail-girls.csv

# Log directory
LOG_DIR=logs

# Temporary directory
TEMP_DIR=tmp

# Upload directory
UPLOAD_DIR=uploads

# Backup directory
BACKUP_DIR=backups

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable HTTPS (true/false)
HTTPS_ENABLED=false

# SSL certificate paths (if HTTPS is enabled)
SSL_CERT_PATH=
SSL_KEY_PATH=

# CORS origin (comma-separated list or * for all)
CORS_ORIGIN=*

# Enable helmet security headers (true/false)
HELMET_ENABLED=true

# =============================================================================
# AUTHENTICATION
# =============================================================================

# Default admin username
ADMIN_USERNAME=admin

# Default admin password (change this!)
ADMIN_PASSWORD=admin123

# Session timeout (milliseconds) - 24 hours
SESSION_TIMEOUT=86400000

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging (true/false)
REQUEST_LOGGING=true

# Enable performance monitoring (true/false)
PERFORMANCE_MONITORING=true

# =============================================================================
# SYSTEM SETTINGS
# =============================================================================

# Maximum memory usage per browser instance (MB)
MAX_MEMORY_PER_BROWSER=512

# Enable memory monitoring (true/false)
MEMORY_MONITORING=true

# Cleanup temporary files on startup (true/false)
CLEANUP_ON_START=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode (true/false)
DEBUG_MODE=false

# Enable verbose logging (true/false)
VERBOSE_LOGGING=false

# Enable browser debugging (true/false)
BROWSER_DEBUG=false

# Browser debugging port
BROWSER_DEBUG_PORT=9222

# =============================================================================
# PRODUCTION OPTIMIZATIONS
# =============================================================================

# Enable gzip compression (true/false)
GZIP_ENABLED=true

# Enable static file caching (true/false)
STATIC_CACHE_ENABLED=true

# Cache duration for static files (seconds)
STATIC_CACHE_DURATION=3600

# Enable rate limiting (true/false)
RATE_LIMITING_ENABLED=true

# Rate limit: requests per minute
RATE_LIMIT_RPM=100

# =============================================================================
# LINUX-SPECIFIC SETTINGS
# =============================================================================

# Use single process mode for Chrome (recommended for VPS)
CHROME_SINGLE_PROCESS=true

# Disable Chrome sandbox (required for some VPS environments)
CHROME_NO_SANDBOX=true

# Disable shared memory usage (helps with limited resources)
CHROME_DISABLE_SHM=true

# Enable virtual display (for debugging on headless servers)
VIRTUAL_DISPLAY=false

# Virtual display number
DISPLAY_NUMBER=:1

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Enable automatic backups (true/false)
AUTO_BACKUP=true

# Backup interval (hours)
BACKUP_INTERVAL=24

# Maximum number of backups to keep
MAX_BACKUPS=7

# Backup compression (true/false)
BACKUP_COMPRESSION=true
